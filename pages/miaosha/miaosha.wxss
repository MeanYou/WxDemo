/* pages/miaosha/miaosha.wxss */

.swiper-container {
  width: 750rpx;
  height: 272rpx;
  position: relative;
}

.swiper-box {
  width: 100%;
  height: 272rpx;
}

.slide-image {
  width: 750rpx;
  height: 272rpx;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #000;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}

.miaosha-menu {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.miaosha-menu .menu-item {
  width: 250rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.miaosha-menu .menu-item image {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.miaosha-menu .menu-item text {
  font-size: 26rpx;
  color: #111;
  display: block;
  margin-top: 20rpx;
}

.miaosha-headline {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  height: 90rpx;
  width: 750rpx;
  border-top: 1rpx solid #ccc;
}

.headline-title {
  width: 150rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.headline-title text {
  font-size: 30rpx;
  font-weight: bold;
  font-family: fantasy;
  display: block;
  color: #F0421E;
}

.headline-swiper {
  height: 90rpx;
  width: 600rpx;
}

.headline-content {
  font-size: 24rpx;
  color: #323232;
  overflow: hidden;
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.headline-content text {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}

.headline-content .content {
  padding-left: 50rpx;
  padding-right: 50rpx;
  border-left: 1rpx solid #ccc;
}

.headline-content .time {
  font-size: 22rpx;
  color: #999;
}

.miaosha-countdown {
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  vertical-align: middle;
  display: flex;
  align-items: center;
}

.miaosha-countdown view {
  width: 750rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  display: block;
  border-left: 10rpx solid #F0421E;
}

.miaosha-countdown view text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.miaosha-countdown view .number {
  font-size: 30rpx;
  font-weight: normal;
  color: #FFF;
  background-color: #F0421E;
  padding: 0 4rpx;
}

.miaosha-countdown view .time {
  font-size: 30rpx;
  font-weight: normal;
  color: #A4A4A4;
  background-color: #F5F6FA;
  padding: 0 6rpx;
}

.miaosha-vs {
  width: 750rpx;
}

.miaosha-vs image {
  width: 750rpx;
  height: 837rpx;
}