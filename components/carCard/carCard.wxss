/* components/carCard/carCard.wxss */
.order-title {
  width: 750rpx;
  height: 180rpx;
  line-height: 180rpx;
  vertical-align: middle;
  border-top: 2rpx solid #F2F2F2;
  position: relative;
  background-color: #FFF;
}

.title-img {
  width: 201rpx;
  height: 143rpx;
  display: inline-block;
  position: absolute;
  top: 16rpx;
  left: 31rpx;
}

.title-name {
  width: 310rpx;
  height: 100rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  position: absolute;
  top: 29rpx;
  left: 262rpx;
}

.title-money {
  width: 130rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  position: absolute;
  top: 29rpx;
  right: 31rpx;
}

.money-much {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #F0421E;
  text-align: right;
}

.money-many {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}